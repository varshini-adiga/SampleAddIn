{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "incremental": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "scripts/**/*",
  ],
  "exclude": ["dist", "node_modules", "src/test/*"],
}